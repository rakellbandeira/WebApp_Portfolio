{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install && npm install --prefix frontend && npm install --prefix backend",
  "outputDirectory": "frontend/dist",
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ]
}